<Window x:Class="FlatButtonExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlatButtonExample"
        xmlns:wpfh="clr-namespace:WpfHandler.UI.Controls;assembly=WpfHandler"
        mc:Ignorable="d"        
        Title="Example" 
        Height="70" MinHeight="70" MaxHeight="70"
        Width="230" MinWidth="230" MaxWidth="230">
    <StackPanel x:Name="contentHolder" Orientation="Horizontal">
        <wpfh:FlatButton Label="Call a message box" 
                         Click="FlatButton_CMB_Click" />
    </StackPanel>
</Window>
