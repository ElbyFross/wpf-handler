<!--Styles that required to corrent displaying of incliuded controls.-->
    
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WpfHandler.UI.Controls">

    <!--Overrides styles described in WpfHandler framwork by default.-->
    
    <Style x:Key="MenuButton" TargetType="controls:CatalogButton">
        <Setter Property="UnfocusedBackgroundColor" Value="{DynamicResource unfocusedCatalogButtonBackground}"/>
        <Setter Property="FocusedBackgroundColor" Value="{DynamicResource focusedCatalogButtonBackground}"/>
        <Setter Property="TextColor" Value="{DynamicResource catalogButtonForeground}"/>
    </Style>

    <Style x:Key="FlatTextBox" TargetType="controls:FlatTextBox">
        <Setter Property="Background" Value="{DynamicResource canvasBackground}"/>
        <Setter Property="TextBoxForeground" Value="{DynamicResource textboxForeground}"/>
        <Setter Property="TextBoxBackground" Value="{DynamicResource textboxBackground}"/>
    </Style>

    <Style x:Key="FlatPasswordBox" TargetType="controls:FlatPasswordBox">
        <Setter Property="Background" Value="{DynamicResource canvasBackground}"/>
        <Setter Property="TextBoxForeground" Value="{DynamicResource textboxForeground}"/>
        <Setter Property="TextBoxBackground" Value="{DynamicResource textboxBackground}"/>
    </Style>

    <Style x:Key="FlatButton" TargetType="controls:FlatButton">
        <Setter Property="Background" Value="{DynamicResource textButtonBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource textButtonForground}" />
    </Style>

</ResourceDictionary>
    
    